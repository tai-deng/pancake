import Json from "../Json/Json";
import StateManage from "../StateManage/StateManage";
import TaskItem from "./TaskItem";

const {ccclass, property} = cc._decorator;

@ccclass
export default class Task extends cc.Component {
    private sec:number = 0;
    
    // 任务节点
    @property([cc.Node])
    items:Array<cc.Node> = [];
    // 所有任务
    private tasks:Array<object> = [];
    // 当前任务
    private currentTask:Array<object> = [];
    private date:Date = new Date();

    onLoad () {
        this.tasks = new Json().tasks;
    }

    start () {
        this.init();
    }

    /**
     * 初始化任务   
     * 1.如果当前时间过了 0 点增加任务次数 1;
     */
    public init(){
        if(!this._isOnLoadCalled)return;
        this.items.forEach(function(el,ind){
            let item:cc.Node = el as cc.Node;
            item.on("getData", this.itemGetData, this);
            item.attr({"itemIndex":ind});
            let _task = StateManage.instance.getData("task"+ind);
            let _midnight = StateManage.instance.getData(StateManage.KEY_MIDNIGHT);
            if(JSON.stringify(_task) == "{}"){
                this.create(el,ind);
            }else{
                el.getComponent(TaskItem).itemData = _task;
                this.currentTask.push(_task)
                if(_midnight == 1){
                    StateManage.instance.setData("tasknum"+ind,1);
                    let _isGain = StateManage.instance.getData("isgaina"+ind);
                    if(_isGain == 1){
                        this.create(el,ind);
                    }
                }
            }
            let taskNum = StateManage.instance.getData("tasknum"+ind);
        }.bind(this))
    }
    // 初始化一个完整的任务
    private create(node:cc.Node,index:number){
        StateManage.instance.setData("tasknum"+index,1);
        let newTask = this.randomTask();
        node.getComponent(TaskItem).itemData = newTask;
        StateManage.instance.setData("task"+index,newTask);
    }
    // 确认刷新任务
    private itemGetData(e:cc.Event):void {
        let item:cc.Node = e.currentTarget as cc.Node;
        let taskItem:TaskItem = item.getComponent(TaskItem);
        let oldId =  item.getComponent(TaskItem).itemData["id"];
        let arr = [];
        this.currentTask.forEach(el => {
            if(el["id"] != oldId){
                arr.push(el);
            }
        });
        this.currentTask = arr;
        taskItem.itemData = this.randomTask();
        
    }
    // 任务数据归零
    public rezreo (el:string){
        switch(el){
            case "overturn":
            StateManage.instance.setData("overturn",0);
            break;
            case "tagem":
            StateManage.instance.setData("tagem",0);
            break;
            case "turn":
            StateManage.instance.setData("turn",0);
            break;
            case "tmturn":
            StateManage.instance.setData("tmturn",0);
            break;
            case "tagrade":
            StateManage.instance.setData("tagrade",0);
            break;
            case "resurgenceCar":
            StateManage.instance.setData("resurgenceCar",0);
            break;
            case "fdrelay":
            StateManage.instance.setData("fdrelay",0);
            break;
            case "crazyTap":
            StateManage.instance.setData("crazyTap",0);
            break;
            case "anyShare":
            StateManage.instance.setData("anyShare",0);
            break;
            case "ripeShare":
            StateManage.instance.setData("ripeShare",0);
            break;
        }
    }
    // 随机任务
    public randomTask(){
        let arr = this.currentTask;
        while (true){
            let length = this.tasks.length;
            let ind = Math.floor(Math.random() * length);
            ind = ind == length ? length - 1 : ind;
            let taskI = this.tasks[ind];
            let hasSame:boolean = false;
            
            for(let i = 0;i < arr.length;++i){
                if(arr[i]['id'] == taskI['id']) {
                    hasSame = true;
                    break;
                }
            }
            if (!hasSame) {
                this.currentTask.push(taskI);
                this.rezreo(taskI["value"]);
                return taskI;
            }
        }
    }
    /**
     * 定时更新任务
     * 1.获取当前的日期 年月日
     * 2.获取下一天0点的时间戳
     * 3.当前的时间大于这个时间就给一个刷新机会
     * 4.给过机会之后重新获取当前的日期 年月日
     */
    public setTimeDay(){
        let nextDay = StateManage.instance.getData(StateManage.KEY_NEXTDAY);
        
        let today = StateManage.instance.getData(StateManage.KEY_TODAY);
        today = today?today:this.date.getTime();

        if(nextDay == 0){
            this.renewal();
        }else if(today > nextDay){
            this.newNextDay()
        }
    }
    public renewal(){
        let time = this.date.getTime();
        let newDate = new Date(time+86400000);
        newDate.setHours(0,0,0);
        let nextDay = newDate.getTime();
        StateManage.instance.setData(StateManage.KEY_NEXTDAY,nextDay);
    }
    /**
     * 更新目标时间
     */
    public newNextDay(){
        let time = this.date.getTime();
        let newDate = new Date(time+86400000);
        newDate.setHours(0,0,0);
        let nextDay = newDate.getTime();
        StateManage.instance.setData(StateManage.KEY_NEXTDAY,nextDay);
        this.init();
    }
    update (dt) {
        this.sec += dt;
        if(Math.floor(this.sec) == 1){
            this.setTimeDay();
            this.sec = 0;
        }
    }
}
