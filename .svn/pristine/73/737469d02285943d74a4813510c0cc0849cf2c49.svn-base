const {ccclass, property} = cc._decorator;

@ccclass
export default class NewClass extends cc.Component {

    @property(cc.Node)
    clickBtn:cc.Node=null;

    // LIFE-CYCLE CALLBACKS:

    // onLoad () {}

    start () {
        if(!this._isOnLoadCalled) return;
        this.addUserData();
        this.clickBtn.active = true;
        this.clickBtn.on(cc.Node.EventType.TOUCH_END,this.click,this);
    }
    private click(ev:cc.Event){
        this.clickBtn.active = false;
        GameManager.soundsManager.playTapSound();
    }
    // 添加用户数据
    private addUserData(){
        if(typeof wx == "undefined") return;
        let openData = wx.getOpenDataContext()
        openData.postMessage({
            "direction":1,
        })
        
        let timestamp = (new Date()).valueOf();
        wx.setUserCloudStorage(
            {
                "KVDataList":[
                    {
                        "key":"score",
                        "value":'{"wxgame":{"score":' + 80 + ', "update_time":' + timestamp + '}}',
                    }
                ]
            }   
        );
        
        console.log("排行榜子域")
        
    }
    // update (dt) {}
}
